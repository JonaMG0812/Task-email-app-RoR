%h1= t('.page_title')

%table
  %thead
    %tr
      %th= t('.name')
      %th= t('.description')
      %th= t('.due_date')
      %th= t('.associated_category')
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.due_date
        %td= task.category.name
        %td= link_to t('common.show'), task
        %td= link_to t('common.edit'), edit_task_path(task)
        %td= link_to t('common.destroy'), task, :method => :delete, :data => { :confirm => t('common.confirm') }

%br

= link_to t('.new_task'), new_task_path
